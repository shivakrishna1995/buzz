    "ios": "expo start --ios",
    "web": "expo start --web",
    "lint": "eslint .",
    "test": "jest"
  },
  "dependencies": {
    "babel-plugin-module-resolver": "^5.0.0",
    "expo": "~47.0.12",
    "expo-status-bar": "~1.4.2",
